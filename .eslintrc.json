{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "react-app",
    "react-app/jest"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ],
    "react/prop-types": "off"
  },
  "ignorePatterns": [ "node_modules/", "build/", "coverage/" ]
}
